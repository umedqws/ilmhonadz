<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="500dp" />
            <padding
                android:top="2dp"
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"/>
            <stroke
                android:width="2dp"
                android:color="@color/design_default_color_error" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="500dp" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
        </shape>
    </item>
</layer-list>